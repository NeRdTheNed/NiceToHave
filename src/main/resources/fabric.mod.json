{
  "schemaVersion": 1,
  "id": "nicetohave",
  "version": "1.3.0-beta.3",

  "name": "Nice to Have",
  "description": "Nice To Have is a mod about adding small features that are...well...nice to have, without disrupting the vanilla experience.",
  "authors": [
    "RedstoneParadox"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/nice-to-have",
    "sources": "https://github.com/RedstoneParadox/NiceToHave"
  },

  "license": "LGPL v3.0",
  "icon": "assets/nicetohave/logo.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "redstoneparadox.nicetohave.NiceToHave"
      },
      {
        "adapter": "kotlin",
        "value": "redstoneparadox.nicetohave.compat.terrestria.TerrestriaCompat"
      },
      {
        "adapter": "kotlin",
        "value": "redstoneparadox.nicetohave.compat.traverse.TraverseCompat"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "redstoneparadox.nicetohave.client.NiceToHaveClient"
      }
    ]
  },
  "mixins": [
    "nicetohave.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.6.1",
    "fabric": ">=0.3.2",
    "fabric-language-kotlin": ">=1.3.40"
  },
  "suggests": {
    "terrestria": "*",
    "traverse": "*"
  },

  "custom": {
    "pconfig": [ "redstoneparadox.nicetohave.util.newconfig.Config" ]
  }
}
