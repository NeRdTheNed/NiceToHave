{
  "schemaVersion": 1,
  "id": "nicetohave",
  "version": "${version}",

  "name": "Nice to Have",
  "description": "This is a mod containing some small things that I though would be nice to have.",
  "authors": [
    "RedstoneParadox"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/nice-to-have",
    "sources": "https://github.com/RedstoneParadox/NiceToHave"
  },

  "license": "LGPL v3.0",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "redstoneparadox.nicetohave.NiceToHave"
      },
      {
        "adapter": "kotlin",
        "value": "redstoneparadox.nicetohave.compat.terrestria.TerrestriaCompat"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "redstoneparadox.nicetohave.client.NiceToHaveClient"
      }
    ]
  },
  "mixins": [
    "nicetohave.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.4.8",
    "fabric": ">=0.3.1",
    "fabric-language-kotlin": ">=1.3.40"
  },
  "suggests": {
    "terrestria": "*",
    "traverse": "*"
  }
}
